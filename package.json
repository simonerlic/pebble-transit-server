{
  "name": "gtfs-realtime-api",
  "version": "1.0.0",
  "description": "Comprehensive BC Transit GTFS-realtime API with arrivals, nearby stops, vehicle positions, and service alerts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "clean": "rm -rf dist",
    "test": "node test-api.js",
    "start-and-test": "npm run dev & sleep 10 && npm test && pkill -f ts-node-dev",
    "demo:basic": "node live-updates-example.js basic",
    "demo:routes": "node live-updates-example.js routes",
    "demo:nearby": "node live-updates-example.js nearby",
    "demo:next": "node live-updates-example.js next",
    "prod:build": "npm run clean && npm ci --only=production && npm run build",
    "prod:start": "NODE_ENV=production npm start",
    "docker:build": "docker build -t bc-transit-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env bc-transit-api",
    "docker:dev": "docker-compose --profile dev up --build",
    "docker:prod": "docker-compose up --build -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f transit-api",
    "deploy:railway": "railway deploy",
    "deploy:render": "echo 'Connect GitHub repo to Render dashboard'",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run build && npm test"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "gtfs-realtime-bindings": "^1.1.1",
    "helmet": "^7.1.0",
    "jszip": "^3.10.1",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.9"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.10",
    "@types/node": "^18.19.111",
    "@types/node-fetch": "^2.6.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
